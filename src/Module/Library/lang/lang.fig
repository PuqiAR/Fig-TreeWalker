// Error interface

public interface Error
{
    toString() -> String;
    getErrorClass() -> String;
    getErrorMessage() -> String;
}

public struct TypeError
{
    public msg: String;
}

impl Error for TypeError
{
    toString()
    {
        return "TypeError: " + getErrorMessage();
    }
    getErrorClass()
    {
        return "TypeError";
    }
    getErrorMessage()
    {
        return msg;
    }
}

